<Page
    x:Class="SpheroBand.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpheroBand"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Button x:ConnectionId='1' x:Name="btnRun" Content="Run" HorizontalAlignment="Left"  VerticalAlignment="Top"                      FontFamily="Global User Interface" FontSize="16"/>
            <ScrollViewer  VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtStatus" TextWrapping="Wrap"  FontSize="16" Text="{Binding StatusMessage}"/>
            </ScrollViewer>
            <ToggleSwitch x:ConnectionId='2' x:Name="ConnectionToggle" HorizontalAlignment="Left" Margin="76,122,0,0" VerticalAlignment="Top"                                    />
        </StackPanel>
    </Grid>
</Page>

