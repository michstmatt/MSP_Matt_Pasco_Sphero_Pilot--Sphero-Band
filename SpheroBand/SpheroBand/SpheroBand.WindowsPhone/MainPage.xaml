<Page
    x:Class="SpheroBand.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpheroBand"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <Button x:Name="btnRun" Content="Run" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Button_Click" FontFamily="Global User Interface" FontSize="16"/>
        <TextBlock x:Name="txtStatus" TextWrapping="Wrap"  FontSize="16" Text="{Binding StatusMessage}"/>
        <TextBlock x:Name="txtSphero" TextWrapping="Wrap"  FontSize="16" Text="{Binding SpheroConnected}"/>

        
        <ToggleSwitch x:Name="ConnectionToggle" HorizontalAlignment="Left" Margin="76,122,0,0" VerticalAlignment="Top" Toggled="ConnectionToggle_Toggled" />
    </StackPanel>
</Page>